---
import ServiceIcon from '../components/ui/services/ServiceIcon.astro'

interface Props {
  id: string
  title: string
  content: string[]
}

const { id, title, content } = Astro.props as Props
---

<li class={`card ${id !== 'special' ? '' : 'special-card'}`}>
  <div class="logo-container">
    <ServiceIcon id={id} />
  </div>
  <h1>
    {title || id === 'special' && '¿No está en la lista?'}
  </h1>
  {
    id === 'special' && (
      <p>Cada proyecto es único. Si tu idea no está en la lista, la diseñamos para ti.</p>
    )
  }
  <ul>
    {content.map((item : string) => (
      <li>
        {item}
      </li>
    ))}
  </ul>
</li>

<style>
  .card {
    background-color: rgba(var(--color-quinary-rgb-value), .05);
    color: var(--color-quinary);
    border: 2px solid rgba(var(--color-quinary-rgb-value), .15);
    border-radius: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    gap: 1.5rem;
    padding: 2rem;
    height: 26rem;
    box-sizing: border-box;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: border-color .3s ease-in-out;  
  }

  .logo-container {
    width: fit-content;
    border-radius: 1rem;
    padding: 1rem;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: rgba(var(--color-primary-rgb-value), .75);
    color: var(--color-secondary);
    flex-shrink: 0;
    transition: all 0.3s ease-in-out;
  }

  h1 {
    color: var(--color-quaternary);
    font-size: 1.45rem;
    font-weight: bold;
    text-align: left;
    margin: 0;
    flex-shrink: 0;
  }

  p {
    color: rgba(var(--color-quaternary-rgb-value), .85);
    font-size: 1rem;
    line-height: 1.4;
    margin: 0;
    flex-shrink: 0;
  }

  ul {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    line-height: 1.4;
    gap: 0.5rem;
    color: rgba(var(--color-secondary-rgb-value), .85);
    font-size: 1.1rem;
    list-style: none;
    padding-left: 0;
    margin: 0;
    flex-grow: 1;
    width: 100%;
  }

  ul li {
    color: rgba(var(--color-quaternary-rgb-value), .85);
    position: relative;
    padding-left: 1.5rem;
  }

  ul li::before {
    content: "-";
    color: var(--color-secondary);
    font-weight: bold;
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    font-size: 1.2rem;
  }
  
  .special-card {
    justify-content: flex-start;
    text-align: center;
    align-items: center;
  }
  
  .special-card > .logo-container {
    margin-top: 1.5rem;
    padding: 1.15rem;
    border-radius: 100%;
    background-color: rgba(var(--color-quinary-rgb-value), .2);
    color: rgba(var(--color-quinary-rgb-value), .8);
  }
  
  .special-card > h1 {
    font-size: 1.8rem;
    text-align: center;
  }

  .special-card > p {
    font-size: 1.25rem;
    text-align: center;
  }

  .special-card > ul {
      display: none;
    }

  .card:hover {
    border-color: rgba(var(--color-quinary-rgb-value), .7);
  }

  .card:hover > .logo-container {
    background-color: rgba(var(--color-secondary-rgb-value), .8);
    color: var(--color-primary);
    transform: scale(1.05);
  }

  .special-card:hover > .logo-container {
    background-color: rgba(var(--color-quinary-rgb-value), .8);
    color: #cacbcc;
    transform: none;
  }

  @media (width < 768px) {
    .card {
      height: auto;
      min-height: 22rem;
      padding: 1.5rem;
      gap: 1.2rem;
    }

    .logo-container {
      padding: 0.8rem;
    }

    h1 {
      font-size: 1.3rem;
    }

    p {
      font-size: 0.95rem;
    }

    ul {
      font-size: 1rem;
    }

    .special-card > h1 {
      font-size: 1.5rem;
    }

    .special-card > p {
      font-size: 1.1rem;
    }
  }

  @media (width < 480px) {
    .card {
      height: auto;
      min-height: 20rem;
      padding: 1.2rem;
      gap: 1rem;
    }

    .logo-container {
      padding: 0.7rem;
    }

    h1 {
      font-size: 1.2rem;
    }

    p {
      font-size: 0.9rem;
    }

    ul {
      font-size: 0.95rem;
      gap: 0.4rem;
    }

    ul li {
      padding-left: 1.2rem;
    }

    .special-card > h1 {
      font-size: 1.3rem;
    }

    .special-card > p {
      font-size: 1rem;
    }

    .special-card > .logo-container {
      margin-top: 1rem;
      padding: 1rem;
    }
  }
</style>
