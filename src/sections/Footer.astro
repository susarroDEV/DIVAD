---
import ClockIcon from "../components/ui/communications/ClockIcon.astro";
import EmailIcon from "../components/ui/communications/EmailIcon.astro";
import LocationIcon from "../components/ui/communications/LocationIcon.astro";
import PhoneIcon from "../components/ui/communications/PhoneIcon.astro";
---

<footer>
  <div class="footer-content">
    <section class="brand-section">
      <h1>DIVAD</h1>
      <p class="brand-description">
        Transformados Metálicos con más de 30 años de experiencia. Trabajamos el metal con dedicación artesanal.
      </p>
    </section>
    <section class="contact-section">
      <h2>Contacto</h2>
      <article>
        <PhoneIcon />
        <p>637 56 95 02</p>
      </article>
      <article>
        <EmailIcon />
        <p>divadtransformadosmetalicos@gmail.com</p>
      </article>
    </section>
    <section class="location-section">
      <h2>Ubicación</h2>
      <article>
        <LocationIcon />
        <p>Polígono de Valdeguerra, Las Ventas de Albares, León</p>
      </article>
      <article>
        <ClockIcon />
        <p>Lunes - Viernes: 8:00 - 14:00</p>
      </article>
    </section>
  </div>
  <div class="line-divider"/>
</footer>

<style>
  footer {
    background-color: var(--color-quaternary);
    padding: 2rem 0;
    color: var(--color-background-light);
  }

  h1 {
    font-size: 3rem;
    font-weight: bold;
    color: var(--color-secondary);
  }

  h2 {
    font-size: 1.5rem;
    border-bottom: 2px solid var(--color-secondary);
    font-weight: bold;
    color: var(--color-primary);
  }

  article {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 1rem;
  }

  article :global(svg) {
    color: var(--color-secondary);
  }

  .footer-content {
    margin: 0 auto;
    width: 80%;
    display: grid;
    grid-template-columns: 1fr 1fr 1.5fr;
    gap: 2rem 3rem;
    padding: 0 2rem;
  }

  .brand-section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
  }

  .contact-section,
  .location-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .line-divider {
    width: 100%;
    height: 3px;
    background: linear-gradient(
      90deg,
      transparent,
      var(--color-quinary) 20%,
      var(--color-quinary) 80%,
      transparent
    );
    margin-top: 2rem;
  }

  @media (width < 1024px) {
    .footer-content {
      width: 90%;
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }

    .location-section {
      grid-column: 1 / -1;
    }

    article {
      flex-direction: column;
    }
  }

  @media (width < 768px) {
    footer {
      padding: 1.5rem 0;
    }

    .footer-content {
      width: 95%;
      grid-template-columns: 1fr;
      gap: 2rem;
      padding: 0 1rem;
      text-align: center;
    }

    .brand-section {
      align-items: center;
    }

    .contact-section,
    .location-section {
      align-items: center;
    }

    h1 {
      font-size: 2.5rem;
    }

    h2 {
      font-size: 1.3rem;
    }

    article {
      justify-content: center;
      flex-wrap: wrap;
    }
  }

  @media (width < 480px) {
    footer {
      padding: 1rem 0;
    }

    .footer-content {
      width: 100%;
      padding: 0 0.5rem;
      gap: 1.5rem;
    }

    h1 {
      font-size: 2rem;
    }

    h2 {
      font-size: 1.2rem;
    }

    article {
      gap: 0.8rem;
      text-align: center;
    }

    article p {
      font-size: 0.9rem;
      line-height: 1.3;
    }

    .line-divider {
      margin-top: 1.5rem;
    }
  }

  @media (width < 320px) {
    h1 {
      font-size: 1.8rem;
    }

    h2 {
      font-size: 1.1rem;
    }

    article {
      flex-direction: column;
      gap: 0.5rem;
    }

    article p {
      font-size: 0.85rem;
    }
  }
</style>
