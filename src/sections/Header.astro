---
import ContactInfo from '../components/ContactInfo.astro';
---

<header>
  <h1>
    DIVAD
    <span>
      <div class="line-divider line-left"/>
      Transformadores Met√°licos
      <div class="line-divider line-right"/>
    </span>
  </h1>
  <section class="contact-info">
    <ContactInfo type="phone" />
    <ContactInfo type="email" />
    <ContactInfo type="location" />
  </section>
</header>

<style>
  header {
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    padding: 2rem 5rem;
    background: #0E2538;
    background: radial-gradient(circle, rgba(14, 37, 56, 1) 0%, rgb(13, 18, 37) 83%);
    color: #E7DED0;
    height: 55vh;
    min-height: 500px;
  }

  h1 {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    font-size: 5rem;
    font-weight: 800;
    color: #E7DED0;
    width: 100%;
  }

  h1 > span {
    font-size: 1.85rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    color: #E08E01;
    justify-content: center;
    width: 45%;
    text-wrap: nowrap;
  }

  section {
    display: flex;
    align-items: center;
    gap: 1rem;
    width: 50%;
    flex-wrap: wrap;
    justify-content: center;
    padding-top: 3rem;
  }

  .line-divider {
    height: 2px;
    width: 100%;
  }
  
  .line-left {
    margin-right: 1rem;
    background-image: linear-gradient(to left, #E7DED000 2% , #E7DED0 10%);
  }

  .line-right {
    margin-left: 1rem;
    background-image: linear-gradient(to right, #E7DED000 2% , #E7DED0 10%);
  }

  @media (width < 768px) {
    header {
      padding: 1.5rem 1rem;
      height: auto;
      min-height: 400px;
    }

    h1 {
      font-size: 3rem;
    }

    h1 > span {
      font-size: 1.2rem;
      width: 90%;
      text-wrap: wrap;
      text-align: center;
    }

    section {
      width: 90%;
      gap: 0.5rem;
      padding-top: 2rem;
    }

    .contact-info :global(article) {
      flex-direction: column;
      width: 100%;
      align-items: center;
    }

    .line-left,
    .line-right {
      margin: 0 0.5rem;
    }
  }

  @media (width < 480px) {
    header {
      padding: 1rem 0.5rem;
      min-height: 350px;
    }

    h1 {
      font-size: 2.5rem;
    }

    h1 > span {
      font-size: 1rem;
      width: 95%;
    }

    section {
      width: 95%;
      flex-direction: column;
      gap: 0.5rem;
      padding-top: 1.5rem;
    }
  }
</style>